<p id="notice"><%= notice %></p>

<div class="uk-clearfix">
  <h1 class="uk-float-left">Available Apartments</h1>

  <% if current_user.try(:admin?)  %>
    <%= link_to 'New Apartment', new_apartment_path, { :class=>"uk-button uk-button-danger uk-float-right uk-margin", remote: true}  %>
  <% end %>
</div>

<div id="apartment-form" style="display:none;"></div>

<hr class="uk-article-divider">

<div >
  <article class="uk-article ">
    <ul id="apartments" class="uk-grid">
      <%= render @apartments %>
    </ul>
  </article>
</div>





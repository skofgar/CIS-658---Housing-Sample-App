<p id="notice"><%= notice %></p>

<div class="uk-clearfix">
  <h1 class="uk-float-left">Available Apartments</h1>

  <% if current_user.try(:admin?)  %>
    <%= link_to 'New Apartment', new_apartment_path, { :class=>"uk-button uk-button-danger uk-float-right uk-margin" }  %>
  <% end %>
</div>

<div id="apartments">
  <article class="uk-article ">
    <ul class="uk-grid" data-uk-grid-match data-uk-grid-margin>
      <%= render @apartments %>
    </ul>
  </article>
</div>


